generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String
  email    String @unique
  password String
  role String
  Blog Blog[]
  Profile Profile?
  followers Follow[] @ralation("Followers")
  following Follow[] @relation("Following")
}
model Blog{
id Int @id @default(autoincrement())
title String @db.VarChar(255)
createdAt DateTime @default(now()) @db.Timestamp(6)
content String?
status String
authorId Int
User User @relation(fields:[authorId],references:[id], onDelete:Cascade )
}
model Profile{
id Int @id @default(autoincrement())
bio String?
userId Int @unique
User User @relation(fields:[userId],references:[id], onDelete:Cascade)
}
model Follow{
    id Int @id @default(autoincrement())
   followerId Int
   followingId Int
   follower User @relation("Followers",field:[followerId],references:[id],onDelete:Cascade)
   following User @relation("Following",field:[followingId],references:[id],onDelete:Cascade)
   @@unique([followerId,followingId])
}
